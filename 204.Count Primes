class Solution {
public:
    int countPrimes(int n) {
        int count = 0;
            
        vector <bool> isMark;
        
        for (int i=0; i<n;i++) {
            isMark.push_back(false);
        }
        
        for (int i=2; i<n;i++) {
            if (!isMark[i]) {
                count++;
                int tmp = i;
                while (tmp < n) {
                    
                    isMark[tmp] = true;
                    tmp += i;
                }
            }
        }
        
        return count;
    }
};
