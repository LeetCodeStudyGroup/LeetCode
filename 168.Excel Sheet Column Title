class Solution {
public:
    string convertToTitle(int n) {
        if (n == 1)
            return "A";

        string answer = "";
        vector<int> array;
        while (n >= 1) {
            array.push_back(n % 26);
            if (n % 26 == 0)
                n = n - 1;
            n = n / 26;
        }
        
        for (int i=0; i<array.size(); i++) {
            cout << array[i] << endl;
            if (array[i] == 0)
                answer = "Z" + answer;
            else
                answer = (char) (array[i] - 1 + (int)'A') + answer;
        }
        
        return answer;
    }
};
