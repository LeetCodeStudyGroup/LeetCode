/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        ListNode* dummy = new ListNode(0);
        ListNode* first = dummy;
        ListNode* second = dummy;
        dummy->next = head;
        
        for(int i = 0; i < n+1; i++) {
            if(first == NULL) {
                // list size < n
                return NULL;
            }
            first = first->next;
        }
        
        while (first != NULL) {
            first = first->next;
            second = second->next;
        }
        second->next = second->next->next;
        
        return dummy->next;
    }
};
