class Solution {
public:
    bool isPalindrome(int x) {
        if(x >= 0 && x <= 0)
            return true;
    
        stringstream ss;
        ss << x;
        string str = ss.str();
        
        if (str[0] == '-')
            return false;
            
        int length = str.size();
        int middle = length / 2;
        bool isOdd = length % 2 == 0;
        
        for (int i = 0; i < middle; i++) {
            if (str[i] != str[length - i - 1])
                return false;
        }
        return true;
    }
};
