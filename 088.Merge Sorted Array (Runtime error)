#include <vector>
using namespace std;

class Solution {
public:
    void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
        if(n == 0)
            return;
        int index1 = 0;
        int index2 = 0;
        vector<int>::iterator iter = nums1.begin();
        while (index1<m && index2<n) {
            if (nums1[index1] < nums2[index2])
                index1++;
            else if(index1 == 0) {
                nums1.insert(iter, nums2[index2]);
                index2++;
            } else {
                nums1.insert(iter+index1-1, nums2[index2]);
                index2++;
            }
        }
        
        while (index2 < n) {
            nums1.push_back(nums2[index2++]);
        }
        
        index1 = m+n;
        while (index1 < nums1.size()) {
            nums1.erase(iter+index1);
        }
        
        cout << nums1.size() << endl;
    }
};
