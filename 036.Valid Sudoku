class Solution {
public:
    bool isValidSudoku(vector<vector<char>>& board) {
        bool columnUsed[9][9] = {false}, rowUsed[9][9] = {false}, boxUsed[9][9] = {false};
        
        for (int i=0; i<board.size();i++) {
            for (int j=0; j<board[i].size();j++) {
                if(board[i][j] != '.') {
                    int num = board[i][j] - '0' -1;
                    // cout << "num = " << num << ", board[" << i << "][" << j << "] = " << board[i][j] << endl;
                    int k = i/3*3 + j/3;
                    if(columnUsed[i][num] || rowUsed[j][num] || boxUsed[k][num])
                        return false;
                    else {
                        columnUsed[i][num] = true;
                        rowUsed[j][num] = true;
                        boxUsed[k][num] = true;
                    }
                }
            }
        }
        
        return true;
    }
};
