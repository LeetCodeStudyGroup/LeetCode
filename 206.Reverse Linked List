/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if (head == NULL || head->next == NULL)
            return head;
            
        ListNode* newHead = head->next;
        ListNode* pre = head;
        ListNode* next;
        head->next = NULL;
        
        while (newHead != NULL) {
            next = newHead->next;
            newHead->next = pre;
            pre = newHead;
            if (next == NULL)
                break;
            newHead = next;
        }
        
        return newHead;
    }
};
