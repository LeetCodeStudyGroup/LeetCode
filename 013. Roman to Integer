class Solution {
public:
    int romanToInt(string s) {
        int lastValue = 0;
        int sum = 0;
        for(int i = 0; i < s.length(); i++) {
            int temp = romanToInt(s[i]);
            if(temp > lastValue) {
                sum = sum - lastValue;
            } else {
                sum = sum + lastValue;
            }
            lastValue = temp;
        }
        sum += lastValue;
        return sum;
    }
    
    int romanToInt(char c) {
        switch(c) {  
            case 'I': return 1; 
            case 'V': return 5;  
            case 'X': return 10;  
            case 'L': return 50;  
            case 'C': return 100;  
            case 'D': return 500;  
            case 'M': return 1000;  
            default: return 0;  
        }  
    }
};
